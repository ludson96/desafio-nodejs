{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2020",
    "sourceMap": true,                     
    "outDir": "./build",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".", 
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "config/*"],
}